<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_create_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/arrow_left"
            android:layout_width="21dp"
            android:layout_height="21.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_left"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/profile_cat"
            android:layout_width="141dp"
            android:layout_height="141dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_cat" />

        <Button
            android:id="@+id/arrow_right"
            android:layout_width="21dp"
            android:layout_height="21.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/arrow_right"
            android:scaleType="centerInside" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/f_button"
            android:layout_width="56dp"
            android:layout_height="57dp"
            android:background="@drawable/f_btn" />

        <Button
            android:id="@+id/m_button"
            android:layout_width="56dp"
            android:layout_height="57dp"
            android:background="@drawable/m_btn" />
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="이름을 설정해 주세요."
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="266dp"
                android:layout_height="1dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/underline" />
        </FrameLayout>


        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="완료"
            android:layout_marginTop="63dp"
            android:background="@drawable/create_btn"/>

    </LinearLayout>


</FrameLayout>
